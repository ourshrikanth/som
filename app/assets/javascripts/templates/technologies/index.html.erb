 -->  <div class="col-lg-8">
 <table ng-table="TableParams" class="table table-striped table-bordered" show-filter="true">
            <tr ng-repeat="technology in technologies">
                <td data-title="'Name'" sortable="'name'" filter="{ 'Name': 'text' }">
                     <a href="#" editable-text="technology.name" e-name="name" e-required onbeforesave="updateTechnology(technology,$data)">{{technology.name|| "empty" }}<i class="fa fa-pencil fa-fw"></i></a> 
                </td>
                 <td data-title="'Status'">
               {{technology.status | capitalize }}
                 </td>
               <td data-title="'Actions'">
                   <button  ng-show="technology.status == 'active'" class="btn btn-sm btn-danger" confirmed-click="deactivateTechnology(technology)" ng-confirm-click="Are you Sure?"> <i class="fa fa-trash-o"></i> Deactivate</button>
                </td >
               
            </tr>
        </table>  
        </div>
