<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Technologies</h2>
    </div>
</div>
<form  class="form-inline"  role="form" name="TechnologyForm" novalidate ng-submit="TechnologyForm.$valid && addTechnology()" >
  <h4>Add a new Technology</h4>
    <div class="form-group planForms" >
      <input type="text"  class="form-control" ng-class="{error: TechnologyForm.name.$invalid && TechnologyForm.$submitted }" placeholder="Name" name="name" ng-model="name" model="Technology" unique-field required>
      <div class="error" ng-show=" TechnologyForm.name.$error.required && TechnologyForm.$submitted ">
          Enter Technology Name
      </div>
      <div class="error " ng-show=" !TechnologyForm.name.$error.required && TechnologyForm.name.$dirty && TechnologyForm.name.$error.unique">
        Technology Name already in use
      </div>
    </div>
    <div class="form-group planForms">
<button type="submit" class="btn btn-sm btn-success">Add</button>
</div>
</form>

